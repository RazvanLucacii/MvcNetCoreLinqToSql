@model List<Empleado>

<div class="container mt-5">
    <h1>Empleados Linq To Sql</h1>
    <hr/>
    <ul class="list-group">
        @foreach (Empleado emp in Model)
        {
            <li class="list-group-item">
                @emp.Apellido - @emp.Oficio -
                <a asp-controller="Empleados" asp-action="Detalles" asp-route-id="@emp.IdEmpleado" class="btn btn-primary">
                    Detalles
                </a>
            </li>
        }
    </ul>
</div>