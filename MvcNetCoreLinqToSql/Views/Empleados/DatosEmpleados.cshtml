@model ResumenEmpleados?

@{
    List<string> oficios = ViewData["OFICIOS"] as List<string>;
    List<int> departamentos = ViewData["DEPARTAMENTOS"] as List<int>;
}

<div class="container mt-5">
    <h1>Lambda Empleados Oficio</h1>

    @* <form method="post">
        <label>Introduzca oficio: </label>
        <input type="text" class="form-control" name="oficio" />
        <br/>
        <button class="btn btn-success">
            Mostrar Resumen
        </button>
    </form> *@

    <form method="post">
        <label>Introduzca oficio: </label>
        <select name="oficio">
            @foreach(string oficio in oficios)
            {
                <option value="@oficio">@oficio</option>
            }
        </select>
        <br />
        <button class="btn btn-success">
            Mostrar Resumen
        </button>
    </form>


    <form method="post">
        <label>Introduzca departamento: </label>
        <select name="departamento">
            @foreach (int departamento in departamentos)
            {
                <option value="@departamento">@departamento</option>
            }
        </select>
        <br />
        <button class="btn btn-success">
            Mostrar Resumen
        </button>
    </form>
    <hr/>
    @if (Model != null)
    {
        <ul class="list-group">
            <li class="list-group-item">
                Personas: @Model.Personas
            </li>
            <li class="list-group-item">
                Maximo Salario: @Model.MaxSalario
            </li>
            <li class="list-group-item">
                Media Salarial: @Model.MediaSalarial
            </li>
        </ul>
        <hr/>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Apellido</th>
                    <th>Oficio</th>
                    <th>Salario</th>
                </tr>
            </thead>
            <tbody>
                @foreach(Empleado emp in Model.Empleados)
                {
                    <tr>
                        <td>@emp.Apellido</td>
                        <td>@emp.Oficio</td>
                        <td>@emp.Salario</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>